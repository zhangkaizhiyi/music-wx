    url('//at.alicdn.com/t/font_945945_68e6a3gqhbc.woff') format('woff'),
    url('//at.alicdn.com/t/font_945945_68e6a3gqhbc.ttf') format('truetype'),
    url('//at.alicdn.com/t/font_945945_68e6a3gqhbc.svg#iconfont') format('svg');
}

.iconfont {
    font-family:"iconfont" !important;
    font-size:16px;
    font-style:normal;
    color:white;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

