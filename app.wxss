/**app.wxss**/
page {
    background-color: #190428;
}
.header {
    width: 100%;
    height: 100rpx;
    color:white;
    display: flex;
    align-items: center;
    padding: 10rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}
image {
    width: 100%;
}
.text {
    font-size: 30rpx;
    color: white;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.big {
    font-size: 40rpx;
    font-weight: 700;
}
.small {
    font-size: 20rpx;
}
.list-item {
    display:flex;
    width: 100%;
    height: 50px;
}
.list-item image {
    width: 100%;
}
.list-item .info {
    flex: 1;
    display:flex;
    align-items: center;
    color:#fff;
}

@font-face {
    font-family: 'iconfont';  /* project id 945945 */
    src: url('//at.alicdn.com/t/font_945945_68e6a3gqhbc.eot');
