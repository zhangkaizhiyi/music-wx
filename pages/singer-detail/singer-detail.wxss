/* pages/singer-detail/singer-detail.wxss */
.banner {
    position: relative;
    width: 100%;
    height: 300px;
    overflow: hidden;
}
.banner .cover {
    width: 100%;
    height: 100%;
}
.banner .title{
    position: absolute;
    top: 5px;
    left: 50%;
    font-weight: 700;
    text-align: center;
    transform: translate(-50%,0);
}
.song-list {
    height: 200px;
}
.song-item {
    padding: 10px;
    box-sizing: border-box;
    height: 30px;
    border-bottom: 1px solid #000;
}
