/* components/nav-bar/nav-bar.wxss */
.nav-bar {
    width: 100%;
    display: flex;
    height: 100rpx;
    align-items: center;
    justify-content: space-around;
    color: white;
    font-size: 30rpx;
}
.nav-bar .title {
    color: yellow;
    font-size: 20rpx;
    width: 40px;
    flex:0 0 40px;
}
.nav-bar .nav-item {
    flex:1;
    line-height: 50px;
    height: 100%;
    text-align: center;
}
.nav-bar .active {
    border-bottom: 2px solid red;
}
